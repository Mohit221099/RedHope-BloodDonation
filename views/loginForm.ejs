<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Donation - Donor Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script>
 function updateFormAction() {
    let role = document.getElementById("role").value;
    let form = document.getElementById("loginForm");

    if (role === "Donour") {
        form.action = "/donour/login";
    } else if (role === "Hospital Authority") {
        form.action = "/hospital/login";
    }

    alert("Form action updated to: " + form.action);
}

         function validateForm(event) {
            let role = document.getElementById("role").value;
            if (role === "") {
                alert("Please select a role!");
                event.preventDefault(); // Stop form submission
            } else {
                updateFormAction(); // Ensure correct action is set
            }
        }
        
</script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4
        }
        
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        
        h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        
        form {
            display: flex;
            flex-direction: column;
        }
        
        label {
            margin-bottom: 5px;
            font-weight: bold;
        }
        
        input {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        
        button {
            padding: 10px;
            border: none;
            border-radius: 4px;
            background-color: #e74c3c;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }
        
        button:hover {
            background-color: #c0392b;
        }
        
    </style>
</head>
<body>
    
    <% if(messages && messages.length){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= messages %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
    
    <div class="container w-50 mt-3">
        <h2>Donor Login</h2>
        <form id="loginForm" method="post" onsubmit="validateForm(event)">

            <select name="role" id="role" class="form-select" required>
                <option disabled selected value="">---Select User---</option>
                <option value="Donour">Donour</option>
                <option value="Hospital Authority">Hospital Authority</option>
            </select>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>

            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>
